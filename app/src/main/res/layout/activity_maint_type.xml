<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btScheduledMaint"
        android:text="Scheduled Maintenance"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btBreakdownMaint"
        android:text="Breakdown Maintenance"
        android:layout_below="@+id/btScheduledMaint"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btAttendBreakdown"
        android:text="Attend Breakdown"
        android:layout_below="@+id/btBreakdownMaint"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_margin="10dp"/>
    </RelativeLayout>

</RelativeLayout>